{{#tool-bar
  model=model
  someSelected=someSelected
  allSelected=allSelected
  noneSelected=noneSelected
  unreadMessages=unreadMessages
  showComposeForm=showComposeForm
  applyLabel=(action "applyLabel")
  removeLabel=(action "removeLabel")
  toggleComposeForm=(action "toggleComposeForm")
  toggleChecked=(action "toggleChecked")
}}
{{/tool-bar}}

{{#if showComposeForm}}
{{compose-form}}
{{/if}}

{{#each model as |message|}}
{{inbox-messages
   message=message
   model=model
   someSelected=someSelected
   allSelected=allSelected
   noneSelected=noneSelected
   toggleStar=(action "toggleStar")
   toggleCheck=(action "toggleCheck")
  }}
{{/each}}
